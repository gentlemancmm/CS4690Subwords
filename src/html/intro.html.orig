<script>

/*
    1. Get socket communicating (start socket, emit message back to server, server prints message)
    2. Use Vue to print out a message when you click on "Let's go" (with a function)
    3. Change that function to 'emit' a message back to the server with player name and room code
    4. Have the server print out the player name and room code
*/

var app = new Vue({
    el: '#app',
    data: {
        roomCode: "asdf",
        authentication: false,
        playerName: "",
        roomCodeInput: ""
        
    },
    methods: {
        login: function(){
            if (this.username != "" && this.roomCodeInput != "") {
                if (this.roomCodeInput == this.roomCode) {

                    this.authentication = true;
                    alert("login successful")
                    console.log(this.authentication)
                } else {
                    console.log("The username and / or password is incorrect");
                    console.log(this.authentication)
                    }
            } else {
                console.log("A username and password must be present");
                console.log(this.authentication)
            } 
        },

        startGame: function(){
            if (this.authentication == true){
                // go to player.html
                alert("ready set go")
            } else {
                alert("please login with a valid username/room code")
            }
            console.log(this.authentication)
        }
        
    }
})

